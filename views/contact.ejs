  <!-- menampilkan contact list -->
    <div class="container">
        <h1>Hello to Contact Page</h1>
        <a href="/contact/add" class="btn btn-primary">Add contact</a>
        <h3>Contact List</h3>
        <div class="row">
            <div class="col">

                <table class="table table-striped mt-3">
                    <thead>
                        <tr>
                            <th>No</th>
                            <th>Nama</th>
                            <th>Email</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (cont.length == 0) { %>
                            <tr><td colspan="3"><b>Contact masih kosong</b></td></tr>
                        <% }else{ %>  
                            <% cont.forEach( (con,index) => { %>
                                <tr>
                                    <td><%= index+1 %></td>
                                    <td><%= con.name %> </td>
                                    <td><%= con.email %> </td>                    
                                    <td>
                                        <a href="../contact/<%= con.name %>">
                                            <span class="badge rounded-pill text-bg-success">detail</span>   
                                        </a>
                                    </td>                    
                                </tr>
                            <% }) %>
                        <% } %> 
                    </tbody>
                </table>
                   
            </div>
        </div>
    </div>

